# Maintainer: Feng Feng <jhswx84@aliyun.com>
pkgname=proxyee-down
pkgver=2.53
pkgrel=1
pkgdesc="Baidu Pan client for Linux Desktop users"
arch=("any")
url="https://github.com/monkeyWie/proxyee-down"
license=('Apache License 2.0')
depends=('jre8-openjdk')
source=("https://github.com/monkeyWie/proxyee-down/releases/download/${pkgver}/proxyee-down-${pkgver}-jar.zip")
md5sums=('SKIP')

package() {
  cd "${srcdir}"
  unzip -o proxyee-down-${pkgver}-jar.zip -d ${pkgdir}/opt
  echo "#!/bin/bash /n /usr/bin/java -jar ./proxyee-down.jar" > "${pkgdir}/opt/${pkgname}-${pkgver}/${pkgname}"
  chmod 755 "${pkgdir}/opt/${pkgname}-${pkgver}/${pkgname}"
  ln -s "${pkgdir}/opt/${pkgname}-${pkgver}/${pkgname}"  "${pkgdir}/usr/bin/${pkgname}" 
}
